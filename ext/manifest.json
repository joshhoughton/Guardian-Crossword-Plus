{
  "name": "Twitch Chat on YouTube",
  "version": "0.0.2",
  "manifest_version": 3,
  "description": "Click my icon to load Twitch chat on a YouTube live page.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "action": {
    "default_title": "Get Twitch Chat on YouTube"
  },
  "permissions": [
      "scripting",
      "activeTab"
  ],
  "background": {
    "service_worker": "src/bg/background.js"
  }
}